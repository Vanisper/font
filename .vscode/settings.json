{
    // <https://github.com/subframe7536/maple-font/blob/variable/source/features/README_CN.md#使用>
    // 设置字体
    "editor.fontFamily": "Maple Mono NF CN, Menlo, Consolas, Maple UI, PingFang, 'Microsoft YaHei', monospace",
    // 启用连字或者开启 OpenType 特性
    "editor.fontLigatures": true,
    // 默认终端（windows）
    // "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.profiles.windows": {
        "Command Prompt": {
            "path": "C:\\Windows\\System32\\cmd.exe",
            "args": ["-NoExit", "/K", "chcp 65001"]
        },
        "PowerShell": {
            "source": "PowerShell",
            "args": ["-NoExit", "/C", "chcp 65001"]
        }
    },
}
